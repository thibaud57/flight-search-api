# ==============================================================================
# Logging
# ==============================================================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR

# ==============================================================================
# Performance (tunable selon ressources serveur)
# ==============================================================================
MAX_CONCURRENCY=10  # Augmenter si serveur puissant (ex: 20)
MAX_RESULTS=10

# ==============================================================================
# Proxies (secrets + config)
# ==============================================================================
PROXY_USERNAME=customer-YOUR_KEY-country-FR
PROXY_PASSWORD=your_password
PROXY_HOST=proxy.provider.com:9000

# ==============================================================================
# Features flags
# ==============================================================================
PROXY_ROTATION_ENABLED=true
CAPTCHA_DETECTION_ENABLED=true
RANKING_KEEP_ONLY_FIRST_RESULT=true
# Ranking strategy: Keep only first result per date combo (true) or use all results (false)
# - true: Max diversity of dates, 1 result per date combo (recommended)
# - false: Max diversity of flights same date (e.g., different layover cities)

# ==============================================================================
# Crawler Timeouts (optionnel - override constantes si n√©cessaire)
# ==============================================================================
# CRAWLER__CRAWL_PAGE_TIMEOUT_MS=6000
# CRAWLER__CRAWL_DELAY_S=5.0
# CRAWLER__CRAWL_GLOBAL_TIMEOUT_S=70.0
